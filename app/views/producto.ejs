<%- include('cabecera', {tituloweb: 'Registro de productos'}); %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro de productos</title>
</head>
<body>
    <div class="container">
        <h3>Registro de productos</h3>
        <%- include('footer'); %>
            <% productos.forEach(function(producto) {%>
                <table class="table mt-2">
                    <thead class="thead-dark">
                        <tr>
                            <th>Nombre del producto</th>
                            <th>Vendedor</th>
                            <th>Fecha de generaci√≥n de factura</th>
                            <th>Valor del producto</th>
                            <th>Impuesto de valor agregado</th>
                        </tr>
                    </thead>
                    <td><%= producto.nombre %></td>  
                    <td><%= producto.vendedor %></td>
                    <td><%= producto.fecha %></td>
                    <td><%= producto.documento %></td>
                    <td><%= producto.impuesto %></td>
                <%if (producto.nombre=='Milo') {%>
                    <div class="container mt-5">
                        <div class="row">
                            <div class="col text-center">
                                <img class="mx-auto d-block" src="/Images/logo_milo.jpg" height="200" width="400">  
                            </div>
                        </div>
                    </div>
                <%} else if (producto.nombre=='Chocolisto'){%>
                        <div class="container mt-5">
                            <div class="row">
                                <div class="col text-center">
                                    <img class="mx-auto d-block" src="/Images/logo_chocolisto.jpg" height="200" width="400">  
                                </div>
                            </div>
                        </div>
                <%} else if (producto.nombre=='Nesquik'){%>
                    <div class="container mt-5">
                        <div class="row">
                            <div class="col text-center">
                                <img class="mx-auto d-block" src="/Images/logo_nesquik.jpg" height="200" width="400">  
                            </div>
                        </div>
                    </div>
                <%}%>
            </tr>
            <%})%>
        </table>
    </div>
</body>
</html>